@import './theme.styl'

:host
    font-family: 'Muli', sans-serif
.page-container
    max-width: 900px
    margin-left: auto
    margin-right: auto
    margin-top: 92px
@media screen and (max-width: 1023px)
    .page-container
        margin-top 72px
        margin-left 12px
        margin-right 12px


.offline-mode
    position absolute
    top 0
    left 0
    width 100%
    height 92px
    background alertBackgroundColor
    color: lightTextColor
    font-size: 20px
    text-align: center
    z-index: 2
    line-height: 92px